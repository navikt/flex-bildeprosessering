{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "simple-import-sort"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "semi": [
            2,
            "never"
        ]
    }
}
